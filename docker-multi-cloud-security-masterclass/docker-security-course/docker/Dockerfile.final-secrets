FROM node:18-alpine

# Create non-root user
RUN adduser -D -u 1001 appuser

WORKDIR /app

COPY src/final-secrets-app.js .
COPY src/package.json .

RUN npm install

# Set ownership
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

EXPOSE 3000

CMD ["node", "final-secrets-app.js"]
